import os
from pacman_mirrors import pacman_mirrors
from pacman_mirrors import i18n

_ = i18n.language.gettext

if os.getuid() != 0:
    print(_("Error: must have root privilegies."))
    exit(1)

try:
    pm = pacman_mirrors.PacmanMirrors()
    pm.run()
except KeyboardInterrupt:
    print(_("\nError: interrupted by the user."))
    exit(1)

